<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:weightSum="8">
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="0dip"
		android:background="@drawable/panel_buttons"
		android:layout_weight="1">
		<Button
			android:id="@+id/btn_show_dialed"
			android:background="@drawable/btn_show_dialed_bg"
			android:textSize="13dip"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"/>
		<Button
			android:id="@+id/btn_show_received"
			android:background="@drawable/btn_show_received_bg"
			android:textSize="13dip"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"/>
		<Button
			android:id="@+id/btn_show_missed"
			android:background="@drawable/btn_show_missed_bg"
			android:textSize="13dip"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"/>
		<Button
			android:id="@+id/btn_show_all"
			android:background="@drawable/btn_show_all_bg"
			android:textSize="13dip"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"/>
	</LinearLayout>
	<ListView android:id="@+id/list_history"
	    android:layout_width="fill_parent"
	    android:layout_height="0dip" 
	    android:layout_y="60dip"
	    android:layout_weight="6"
	    android:focusable="false"
	    android:focusableInTouchMode="false"/>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="0dip"
		android:background="@drawable/panel_buttons"
		android:gravity="center"
		android:paddingBottom="5dip"
		android:layout_weight="1">
		<Button
			android:id="@+id/btn_clear_all"
			android:background="@drawable/btn_clear_bg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	</LinearLayout>
</LinearLayout>
