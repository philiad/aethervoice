<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:weightSum="8">
	<TextView
	android:id = "@+id/show_message"
	android:layout_width = "fill_parent"
	android:layout_height = "wrap_content"
	android:gravity = "center"
	android:textSize = "15dp"
	/>
	<LinearLayout
		android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:orientation="vertical"
	    android:layout_weight="7">
	    <LinearLayout
			android:id="@+id/directory_search_frame"
			android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:gravity="center_vertical"
		    android:layout_weight="6">
		    <EditText
				android:id="@+id/directory_search_box"
				android:background="@drawable/edit_text_bg"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:paddingLeft="10dip"
			    android:layout_marginLeft="10dip"
			    android:layout_marginRight="10dip"
			    android:imeOptions="actionDone"/>
		</LinearLayout>
		<ListView android:id="@+id/directory_list_numbers"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_y="60dip"
		    android:layout_weight="1"/>
	</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="0dip"
		android:background="@drawable/panel_buttons"
		android:paddingBottom="5dip"
		android:layout_weight="1"
		android:gravity="center">
		<Button
			android:background = "@drawable/btn_unstar_all_bg"
			android:id="@+id/directory_btn_clear"
			android:layout_margin="3dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity = "center_vertical"/>
	</LinearLayout>
</LinearLayout>